{
  "manifest_version": 3,
  "name": "WatchIt Enforcer",
  "version": "0.1.0",
  "description": "Local monitoring & enforcement via WatchIt",
  "permissions": [
    "tabs", "activeTab", "webNavigation", "storage", "scripting", "alarms"
  ],
  "host_permissions": [
    "http://127.0.0.1:4849/*",
    "https://127.0.0.1:4849/*",
    "http://localhost:4849/*",
    "https://localhost:4849/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": { "default_title": "WatchIt" },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_start"
  }],
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" }
}
