# Example SQLAlchemy URL using SQLCipher (ensure your code sets PRAGMA key)
# DATABASE_URL=sqlite+pysqlcipher:///./data/app.db


# Ollama local model name; change if you prefer llama3.1 etc. (qwen2.5:7b-instruct-q4_K_M)
WATCHIT_OLLAMA_MODEL=llama3.1
WATCHIT_OLLAMA_BASE_URL=http://localhost:11434

# HTTP server
WATCHIT_BIND_HOST=127.0.0.1
WATCHIT_BIND_PORT=4849

# SQLCipher
WATCHIT_DB_PATH=child_monitor.db
WATCHIT_POLICY_VERSION=1.0.0
WATCHIT_DB_KEY=openssl rand -base64 32   # used with PRAGMA key

# Schedules (example: school nights 21:00-07:00)
WATCHIT_SCHEDULE_NAME=schoolnights
WATCHIT_SCHEDULE_DAYS=Mon,Tue,Wed,Thu,Fri
WATCHIT_SCHEDULE_QUIET=21:00-07:00

# Parent PIN (for pause/override)
WATCHIT_PARENT_PIN=123456

# OCR/ASR
WATCHIT_ENABLE_OCR=true
WATCHIT_ENABLE_ASR=true
WATCHIT_WHISPER_MODEL=small  # or tiny/base/small/medium; faster-whisper local

